# Clerk Authentication
# Get these from https://clerk.com after creating an application
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Convex Backend
# Get these from https://convex.dev after creating a project
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud
CONVEX_DEPLOYMENT=your-deployment-name

# Maintenance Mode
# Set to "true" to enable maintenance mode, "false" or remove to disable
NEXT_PUBLIC_MAINTENANCE_MODE=false

# AI Provider API Keys (Server-side only - NEVER expose to client)
# Get OpenAI key from https://platform.openai.com/api-keys
# Using official OpenAI SDK (openai) and OpenAI Agents (@openai/agents)
OPENAI_API_KEY=sk-your-openai-key-here

# Get Gemini key from https://ai.google.dev/
# Using official Google GenAI SDK (@google/genai)
GEMINI_API_KEY=your-gemini-key-here

# AI Provider Defaults (Client-side safe - no sensitive data)
# Options for provider: "openai" or "gemini"
NEXT_PUBLIC_DEFAULT_AI_PROVIDER=openai

# Options for model depend on provider:
# - OpenAI: "gpt-4o", "gpt-4o-mini", "gpt-3.5-turbo"
# - Gemini: "gemini-1.5-pro", "gemini-1.5-flash"
NEXT_PUBLIC_DEFAULT_AI_MODEL=gpt-4o
